<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/suraa_number"
        android:layout_width="@dimen/suraa_number_text_view_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="144"
        android:textSize="@dimen/suraa_number_text_size"
        app:fontFamily="@font/raleway_medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/within_list_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/arabic_name"
            android:text="Suraa Name arabic"
            style="@style/main_list_item_text_style" />

        <TextView
            android:id="@+id/english_name"
            android:text="Suraa Name english"
            style="@style/subtext_list_item_style" />

    </LinearLayout>

</LinearLayout>
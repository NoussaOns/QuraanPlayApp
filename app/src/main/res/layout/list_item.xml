<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/suraa_number"
        android:textSize="@dimen/suraa_number_text_size"
        android:text="144"
        android:layout_width="@dimen/suraa_number_text_view_width"
        android:gravity="center"
        android:layout_height="wrap_content"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/within_list_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/arabic_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suraa Name arabic"
            android:textColor="@android:color/black"
            android:textSize="@dimen/main_text_list"
            app:fontFamily="@font/raleway_medium" />

        <TextView
            android:id="@+id/english_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suraa Name english"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/sub_text_list"
            app:fontFamily="@font/raleway_light" />

    </LinearLayout>

</LinearLayout>
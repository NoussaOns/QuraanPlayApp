<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_list_item_text_style">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/main_text_list</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="subtext_list_item_style">
        <item name="android:textSize">@dimen/sub_text_list</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="current_playing_main_text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/current_playing_main_text_size</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="current_playing_sub_text">
        <item name="android:textSize">@dimen/current_playing_subtext_size</item>
        <item name="fontFamily">@font/raleway_medium</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="grid_item_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">#60000000</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_top_grid_view</item>
        <item name="android:paddingTop">@dimen/padding_bottom_top_grid_view</item>
        <item name="android:paddingRight">@dimen/padding_left_right_grid_view</item>
        <item name="android:paddingLeft">@dimen/padding_left_right_grid_view</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="fontFamily">@font/raleway_medium</item>
    </style>
</resources>
